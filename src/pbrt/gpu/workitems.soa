    Normal3f ns;
    Vector3f dpdus;
    Vector3f dpdvs;
    Normal3f dndus;
    Normal3f dndvs;
    int anyNonSpecularBounces;
    Float etaScale;
    MediumInterface mediumInterface;
};

soa MediumScatterWorkItem {
